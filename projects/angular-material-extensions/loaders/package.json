{
  "name": "@angular-material-extensions/loaders",
  "description": "Set of angular loading components - simple and easy to use",
  "version": "0.0.1",
  "homepage": "https://angular-material-extensions.github.io/loaders",
  "author": {
    "name": "anthonynahas",
    "url": "https://github.com/anthonynahas"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/angular-material-extensions/loaders.git"
  },
  "license": "MIT",
  "schematics": "./schematics/collection.json",
  "keywords": [
    "ng",
    "library",
    "angular",
    "material",
    "material design",
    "ssr",
    "android",
    "apple",
    "microsoft",
    "spinner"
  ],
  "bugs": {
    "url": "https://github.com/angular-material-extensions/loaders/issues"
  },
  "scripts": {
    "build": "../../../node_modules/.bin/ng build @angular-material-extensions/loaders",
    "build:watch": "../../../node_modules/.bin/ng build @angular-material-extensions/loaders --watch",
    "build:schematics": "../../../node_modules/.bin/tsc -p tsconfig.schematics.json",
    "clean": "rm -rf ../../../dist",
    "lint": "../../../node_modules/.bin/ng lint @angular-material-extensions/loaders",
    "resync:schematics": "rsync -a schematics/collection.json ../../../dist/angular-material-extensions/loaders/schematics/",
    "resync:readme": "rsync -a ../../../README.md ../../../dist/angular-material-extensions/loaders/",
    "postbuild": "npm run build:schematics && npm run resync:readme && npm run resync:schematics",
    "prepublish": "npm run build",
    "release:patch": "../../../node_modules/.bin/release-it --patch --ci",
    "release:minor": "../../../node_modules/.bin/release-it --minor --ci",
    "release:major": "../../../node_modules/.bin/release-it --major --ci",
    "ng:test": "../../../node_modules/.bin/ng test @angular-material-extensions/loaders",
    "test": "../../../node_modules/.bin/jest --coverage",
    "test:watch": "../../../node_modules/.bin/jest --coverage --watch"
  },
  "peerDependencies": {
    "@angular/common": "^8.2.14",
    "@angular/core": "^8.2.14"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "publishPath": "../../../dist/angular-material-extensions/select-country"
    },
    "publishConfig": {
      "access": "public"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "../../../CHANGELOG.md"
      }
    },
    "hooks": {
      "before:init": [
        "npm run clean"
      ],
      "after:bump": "echo \"building lib v${version}... \" && npm run build",
      "before:git:release": "echo \"Updating CHANGELOG.md for v${version} \" && git commit -m \"Updating CHANGELOG.md for v${version} \" ../../../CHANGELOG.md",
      "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}.",
      "before:npm": "echo building the library..."
    }
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/../../../src/setup-jest.ts"
    ]
  },
  "globals": {
    "ts-jest": {
      "tsConfig": "<rootDir>/tsconfig.spec.json",
      "stringifyContentPathRegex": "\\.html$",
      "astTransformers": [
        "jest-preset-angular/build/InlineFilesTransformer",
        "jest-preset-angular/build/StripStylesTransformer"
      ]
    }
  }
}
